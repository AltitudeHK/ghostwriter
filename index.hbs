{{!< default}}

<!-- Begin Blog Header -->
<section id="blog">
  <!-- Text -->
  <div class="title container_12">
    <h1>
      <a href="{{@blog.url}}">Altitude Blog</a>
      <a class="button-square" href="{{@blog.url}}/rss"><i class="fa fa-rss"></i></a>
    </h1>
  </div>
</section>
<!-- End Blog Header -->

<div id="post-index" class="container_12">
  {{#foreach posts}}
    <div class="grid_4">
      <li class="post-stub clearfix {{post_class}}" >
        <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
          <div class="post-stub-header">
            {{content words="0"}}
            <h2 class="post-stub-title">{{title}}</h2>
            <time class="post-stub-date" datetime="{{published_at}}">{{date format="D MMMM YYYY"}}</time>
          </div>
        </a>
        <div class="post-tags">
          {{#if tags}}
            {{tags separator=" "}}
          {{/if}}
        </div>
      </li>
    </div>
  {{/foreach}}
  <div class="clearfix"></div>
  <div class="post-navigation">
    {{pagination}}
  </div>
</div>

