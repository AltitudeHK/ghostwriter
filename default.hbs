      <div class="title grid-full">
        <h1>
          <a href="{{@blog.url}}">Altitude <em>Blog</em></a>
          <a class="button-square" href="{{@blog.url}}/rss"><i class="fa fa-rss"></i></a>
        </h1>
      </div>

