<article class="post-stub post-w1 {{post_class}}">
  <div class="post-stub-image">
    <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
      {{content words="0"}}
    </a>
  </div>
  <div class="post-stub-container">
    <div class="post-tags">
      {{#if tags}}
        {{tags separator=" "}}
      {{/if}}
    </div>
    <div class="post-stub-header">
      <h2 class="post-stub-title">
        <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">{{title}}</a>
      </h2>
    </div>
    <div class="post-excerpt">
      {{excerpt words="30"}}
    </div>
    <div class="post-social">
      <time class="post-stub-date" datetime="{{published_at}}">{{date format="D MMMM YYYY"}}</time>
      <div class="post-stub-share">
        <a class="icon-twitter" href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
          onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <i class="fa fa-twitter"></i>
          <span class="hidden">Twitter</span>
        </a>

        <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          <i class="fa fa-facebook"></i>
          <span class="hidden">Facebook</span>
        </a>

        <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
           <i class="fa fa-google-plus"></i>
          <span class="hidden">Google+</span>
        </a>
      </div>
    </div>
  </div>
</article>